---
import BaseHead from "@/shared/ui/layouts/BaseHead.astro";
import BaseScript from "@/shared/ui/layouts/BaseScript.astro";
import Navigation from "@/shared/ui/layouts/Navigation.astro";
import { SmoothCursor } from "@/shared/ui/base/smooth-cursor";
import ElasticLine from "@/shared/ui/base/elastic-line";
---

<html lang="en">
  <head>
    <BaseHead />
    <BaseScript />
  </head>
  <body class="bg-base-50 flex flex-col min-h-svh mx-auto relative">
    <Navigation />
    <main class="grow z-2 bg-[#F1F1EF] main-section"><slot /></main>
    <div
      class="w-full fixed bottom-0 left-0 z-[999] h-[8rem] overflow-hidden"
      style="pointer-events: none;"
    >
      <div class="blur-item-1"></div>
      <div class="blur-item-2"></div>
    </div>
    <div class="hidden sm:block">
      <SmoothCursor client:load />
    </div>
  </body>{
    /* Sticky footer. The only important thing here is the z-index, the sticky position and the bottom value */
  }
  <footer
    class="sticky bottom-0 left-0 w-full h-100 bg-inner-color flex justify-center"
  >
    <div class="mx-auto w-full max-w-4xl p-4 py-6 lg:py-8 pb-[8rem] relative">
      <div class="md:flex md:justify-between">
        <div class="mb-6 md:mb-0">
          <a href="https://treonstudio.com/" class="flex items-center">
            <img src="/favicon.svg" class="h-12 me-3" alt="FlowBite Logo" />
          </a>
        </div>
        <div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
          <div>
            <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase">
              Products
            </h2>
            <ul class="text-gray-500 font-medium">
              <li class="mb-4">
                <a
                  href="https://trenzo.treonstudio.com/"
                  class="hover:underline">Trenzo</a
                >
              </li>
              <li class="mb-4">
                <a
                  href="https://munaqadh.treonstudio.com/"
                  class="hover:underline">Munaqadh</a
                >
              </li>
              <li class="mb-4">
                <a
                  href="https://investrack.treonstudio.com/"
                  class="hover:underline">Investrack</a
                >
              </li>
            </ul>
          </div>
          <div>
            <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase">
              Projects
            </h2>
            <ul class="text-gray-500 font-medium">
              <li class="mb-4">
                <a
                  href="https://kopodby.treonstudio.com"
                  class="hover:underline">Kopod</a
                >
              </li>
              <li class="mb-4">
                <a
                  href="https://muslimfy.treonstudio.com"
                  class="hover:underline">Muslimfy</a
                >
              </li>
              <li class="mb-4">
                <a href="https://radas.treonstudio.com" class="hover:underline"
                  >Radas</a
                >
              </li>
            </ul>
          </div>
          <div>
            <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase">
              Legal
            </h2>
            <ul class="text-gray-500 dark:text-gray-400 font-medium">
              <li class="mb-4">
                <a href="#" class="hover:underline">Privacy Policy</a>
              </li>
              <li>
                <a href="#" class="hover:underline">Terms &amp; Conditions</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div
        class="absolute left-0 top-0 w-full h-full z-[-1] translate-y-[1rem]"
      >
        {/* Animated elastic line */}
        <ElasticLine
          client:load
          releaseThreshold={50}
          strokeWidth={1}
          animateInTransition={{
            type: "spring",
            stiffness: 300,
            damping: 30,
            delay: 0.15,
          }}
        />
      </div>
      <div class="sm:flex sm:items-center sm:justify-between mt-8">
        <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400"
          >© 2025 <a href="https://flowbite.com/" class="hover:underline"
            >TreonStudio™</a
          >. All Rights Reserved.
        </span>
        <div class="flex mt-4 sm:justify-center sm:mt-0">
          <a href="#" class="text-gray-500 hover:text-gray-900 ms-5">
            <svg
              class="w-4 h-4"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="currentColor"
              viewBox="0 0 21 16"
            >
              <path
                d="M16.942 1.556a16.3 16.3 0 0 0-4.126-1.3 12.04 12.04 0 0 0-.529 1.1 15.175 15.175 0 0 0-4.573 0 11.585 11.585 0 0 0-.535-1.1 16.274 16.274 0 0 0-4.129 1.3A17.392 17.392 0 0 0 .182 13.218a15.785 15.785 0 0 0 4.963 2.521c.41-.564.773-1.16 1.084-1.785a10.63 10.63 0 0 1-1.706-.83c.143-.106.283-.217.418-.33a11.664 11.664 0 0 0 10.118 0c.137.113.277.224.418.33-.544.328-1.116.606-1.71.832a12.52 12.52 0 0 0 1.084 1.785 16.46 16.46 0 0 0 5.064-2.595 17.286 17.286 0 0 0-2.973-11.59ZM6.678 10.813a1.941 1.941 0 0 1-1.8-2.045 1.93 1.93 0 0 1 1.8-2.047 1.919 1.919 0 0 1 1.8 2.047 1.93 1.93 0 0 1-1.8 2.045Zm6.644 0a1.94 1.94 0 0 1-1.8-2.045 1.93 1.93 0 0 1 1.8-2.047 1.918 1.918 0 0 1 1.8 2.047 1.93 1.93 0 0 1-1.8 2.045Z"
              ></path>
            </svg>
            <span class="sr-only">Discord community</span>
          </a>
          <a href="https://layers.to/treonstudio" class="text-gray-500 hover:text-gray-900 ms-5">
            <svg
              class="w-4 h-4"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M4.97883 9.68508C2.99294 8.89073 2 8.49355 2 8C2 7.50645 2.99294 7.10927 4.97883 6.31492L7.7873 5.19153C9.77318 4.39718 10.7661 4 12 4C13.2339 4 14.2268 4.39718 16.2127 5.19153L19.0212 6.31492C21.0071 7.10927 22 7.50645 22 8C22 8.49355 21.0071 8.89073 19.0212 9.68508L16.2127 10.8085C14.2268 11.6028 13.2339 12 12 12C10.7661 12 9.77318 11.6028 7.7873 10.8085L4.97883 9.68508Z"
