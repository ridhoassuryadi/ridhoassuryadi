---
import Wrapper from "@/shared/ui/layouts/Wrapper.astro";
import { FlickeringGrid } from "@/shared/ui/base/flickering-grid";
import { Image } from "astro:assets";
---

<section class="overflow-hidden relative min-h-[60vh] flex items-center">
  <!-- Flickering Grid Background with Gradient Blend -->
  <div class="absolute inset-0 opacity-30 flickering-grid-blend">
    <FlickeringGrid 
      client:load
      squareSize={4}
      gridGap={6}
      flickerChance={0.3}
      color="rgb(120, 119, 116)"
      maxOpacity={0.6}
      className="w-full h-full"
    />
  </div>
  
    <div class="py-20 mx-auto relative flex items-center justify-center text-center">
      
      <div class="relative z-10 flex flex-col items-center gap-2">
        <Image 
          src="https://is3.cloudhost.id/ridhoassuryadi/profile.webp"
          alt="#_"
          width={24}
          height={24}
          class="size-12 rounded-xl md:size-16 hover:scale-150 duration-300 hover:rotate-6 ease-in-out"
        />
        <!-- Greeting -->
        <p class="text-base text-base-600 mb-4">
          Hi, I am <span class="font-semibold text-base-900">Ridho Assuryadi</span>.
        </p>
        
        <!-- Main Title -->
        <h1 class="text-4xl md:text-7xl lg:text-7xl text-base-900 leading-tight mb-6 font-family-iserif line-height-[4rem]">
          <span class="font-luxurious text-8xl">S</span>oftware Designer & <br />
          Product <span class="font-luxurious text-8xl">T</span>hinker
        </h1>
        
        <!-- Subtitle -->
        <p class="text-lg text-base-700 mb-8 font-medium">
          who builds stunning, purposeful & scalable products.
        </p>
    
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="#contact" 
            class="inline-flex items-center px-6 py-3 bg-base-900 text-white rounded-lg font-medium hover:bg-base-800 transition-colors duration-200"
          >
            Let's Work Together
          </a>
          
          <a 
            href="#work"
            class="inline-flex items-center gap-2 px-6 py-3 border border-base-300 text-base-700 rounded-lg font-medium hover:bg-base-50 transition-colors duration-200"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>
            </svg>
            View My Work
          </a>
        </div>
      </div>
    </div>
</section>