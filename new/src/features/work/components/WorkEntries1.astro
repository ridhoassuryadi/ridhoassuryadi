---
// Fundations
import Text from "@/shared/ui/base/Text.astro";
import Link from "@/shared/ui/base/Link.astro";
const { title, url, subtitle, pubDate } = {
  url: "/work/" + Astro.props.post.slug,
  title: Astro.props.post.data.title,
  subtitle: Astro.props.post.data.subtitle,
  pubDate: new Date(Astro.props.post.data.pubDate).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "2-digit",
  }),
};
---

<div
  class="relative flex flex-col justify-between w-full h-full p-6 overflow-hidden transition-all transform ring-1 shadow min-h-96 rounded-2xl bg-linear-45 from-base-50 duration-300 to-base-100 ring-base-200 ring-inset group hover:shadow-light"
>
  <div class="flex flex-col items-center md:items-start">
    <div
      class="p-1 ml-auto text-base-900 duration-300 rounded-full bg-base-50 group-hover:-rotate-45"
    >
      <svg
        class="size-4"
        viewBox="0 0 20 20"
        fill="currentColor"
        aria-hidden="true"
      >
        <path
          d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z"
        ></path>
      </svg>
    </div>
    <div class="mt-4">
      <Text tag="p" variant="textXS" class=" text-base-600"
        >{pubDate}</Text
      >
      <Text
        tag="h3"
        variant="textBase"
        class="mt-4 font-medium text-base-900 uppercase text-balance"
      >
        {title}
      </Text>
    </div>
  </div>

  <div
    class="flex flex-col items-start justify-between gap-12 -mb-20 duration-300 group-hover:mb-0"
  >
    <Text
      tag="p"
      variant="textBase"
      class="mt-8 leading-6  text-base-600 text-balance"
    >
      {subtitle}
    </Text>
    <Link size="xs" variant="default" href={url} title={title}>Read more </Link>
  </div>
</div>
