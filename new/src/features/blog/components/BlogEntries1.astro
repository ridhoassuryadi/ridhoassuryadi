---
// Assets
import { Image } from "astro:assets";
// Fundations
import Link from "@/shared/ui/base/Link.astro";
import Text from "@/shared/ui/base/Text.astro";
const { title, url, description, pubDate, image } = {
  url: "/blog/posts/" + Astro.props.post.slug,
  title: Astro.props.post.data.title,
  description: Astro.props.post.data.description,
  image: Astro.props.post.data.image.url,
  pubDate: new Date(Astro.props.post.data.pubDate).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "2-digit",
  }),
};
---

<div
  class="grid sm:grid-cols-2 p-2 ring-base-200 group shadow rounded-3xl hover:shadow-light bg-linear-45 from-base-50 dark:from-base-800 duration-300 to-base-100 dark:to-base-950 relative"
>
  <a
    href={url}
    title={title}
    aria-label={`Read more about ${title}`}
    class="absolute inset-0 z-10"></a>
  <div
    class="flex flex-col justify-between md:min-h-96 p-4 rounded-2xl relative overflow-hidden h-full group"
  >
    <div>
      <Text tag="p" variant="textXS" class="text-base-600"
        >{pubDate}</Text
      >
      <Text
        tag="h3"
        variant="textBase"
        class="font-medium text-base-900 uppercase text-balance mt-4"
      >
        {title}
      </Text>
    </div>
    <div
      class="sm:-mb-20 sm:group-hover:mb-0 gap-12 duration-300 flex flex-col items-start justify-between relative"
    >
      <Text
        tag="p"
        variant="textBase"
        class="text-base-600 leading-6 mt-8 text-balance"
      >
        {description}
      </Text>
      <Link
        size="xs"
        variant="default"
        aria-label={`Read more about ${title}`}
        aria-hidden={true}
        class="pointer-events-none"
      >
        Read more
      </Link>
    </div>
  </div>
  <Image
    src={image}
    alt={title}
    width={500}
    height={800}
    class="w-full h-full object-cover rounded-2xl order-first"
  />
</div>
