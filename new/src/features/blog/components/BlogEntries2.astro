---
// Fundations
import Link from "@/shared/ui/base/Link.astro";
import Text from "@/shared/ui/base/Text.astro";
const { title, url, description, pubDate } = {
  url: "/blog/posts/" + Astro.props.post.slug,
  title: Astro.props.post.data.title,
  description: Astro.props.post.data.description,
  pubDate: new Date(Astro.props.post.data.pubDate).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "2-digit",
  }),
};
---

<div
  class="flex flex-col ring-1 shadow justify-between w-full min-h-96 p-6 rounded-2xl relative overflow-hidden h-full bg-linear-45 from-base-50 dark:from-base-800 duration-300 to-base-100 dark:to-base-950 ring-base-200 ring-inset group hover:shadow-light dark:hover:shadow-dark transform transition-all dark:ring-base-800 group"
>
  <div class="flex flex-col items-center md:items-start">
    <div
      class="rounded-full dark:bg-base-50 bg-black p-1 dark:text-base-900 text-white group-hover:-rotate-45 duration-300 ml-auto"
    >
      <svg
        class="size-4"
        viewBox="0 0 20 20"
        fill="currentColor"
        aria-hidden="true"
      >
        <path
          d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z"
        ></path>
      </svg>
    </div>
    <div class="mt-4">
      <Text tag="p" variant="textXS" class="dark:text-base-400 text-base-600"
        >{pubDate}</Text
      >
      <Text
        tag="h3"
        variant="textBase"
        class="font-medium dark:text-white text-base-900 uppercase text-balance mt-4"
      >
        {title}
      </Text>
    </div>
  </div>

  <div
    class="lg:-mb-20 lg:group-hover:mb-0 gap-12 lg:duration-300 flex flex-col items-start justify-between"
  >
    <Text
      tag="p"
      variant="textSM"
      class="dark:text-base-400 text-base-600 leading-6 mt-8 text-balance"
    >
      {description}
    </Text>
    <Link size="xs" variant="default" href={url} title={title}>Read more </Link>
  </div>
</div>
