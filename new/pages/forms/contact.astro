---
// Fundations
import BaseLayout from "@/shared/ui/layouts/BaseLayout.astro";
import Text from "@/shared/ui/base/Text.astro";
import Button from "@/shared/ui/base/Button.astro";
import Wrapper from "@/shared/ui/layouts/Wrapper.astro";
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="py-24">
      <div class="text-center">
        <Text
          tag="h1"
          variant="displayMD"
          class="text-balance dark:text-white text-base-900"
        >
          Get in touch
          <span class="font-display italic tracking-wide block">
            Send me a message
          </span>
        </Text>
      </div>
      <form class="mt-6 max-w-md mx-auto">
        <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
          <div>
            <label for="first-name" class="sr-only">First name</label>
            <div>
              <input
                type="text"
                name="first-name"
                id="first-name"
                placeholder="Your name"
                autocomplete="given-name"
                class="w-full flex-auto appearance-none rounded-full text-center outline outline-base-200 dark:outline-base-800 dark:text-white text-base-900 outline-inset border-transparent px-3 py-2 shadow-base-800/5 dark:placeholder:text-base-400 dark:place-holder-text-base-600 duration-300 h-10 focus:border-base-500 focus:outline-none focus:outline-4 focus:outline-base-500/10 sm:text-sm bg-base-50 dark:bg-base-800"
              />
            </div>
          </div>
          <div>
            <label for="last-name" class="sr-only">Last name</label>
            <div>
              <input
                type="text"
                name="last-name"
                placeholder="Your last name"
                id="last-name"
                autocomplete="family-name"
                class="w-full flex-auto appearance-none rounded-full text-center outline outline-base-200 dark:outline-base-800 dark:text-white text-base-900 outline-inset border-transparent px-3 py-2 shadow-base-800/5 dark:placeholder:text-base-400 dark:place-holder-text-base-600 duration-300 h-10 focus:border-base-500 focus:outline-none focus:outline-4 focus:outline-base-500/10 sm:text-sm bg-base-50 dark:bg-base-800"
              />
            </div>
          </div>
          <div class="sm:col-span-2">
            <label for="company" class="sr-only">Company</label>
            <div>
              <input
                type="text"
                name="company"
                id="company"
                placeholder="Company name"
                autocomplete="organization"
                class="w-full flex-auto appearance-none rounded-full text-center outline outline-base-200 dark:outline-base-800 dark:text-white text-base-900 outline-inset border-transparent px-3 py-2 shadow-base-800/5 dark:placeholder:text-base-400 dark:place-holder-text-base-600 duration-300 h-10 focus:border-base-500 focus:outline-none focus:outline-4 focus:outline-base-500/10 sm:text-sm bg-base-50 dark:bg-base-800"
              />
            </div>
          </div>
          <div class="sm:col-span-2">
            <label for="email" class="sr-only">Email</label>
            <div>
              <input
                type="email"
                name="email"
                placeholder="Your best email!"
                id="email"
                autocomplete="email"
                class="w-full flex-auto appearance-none rounded-full text-center outline outline-base-200 dark:outline-base-800 dark:text-white text-base-900 outline-inset border-transparent px-3 py-2 shadow-base-800/5 dark:placeholder:text-base-400 dark:place-holder-text-base-600 duration-300 h-10 focus:border-base-500 focus:outline-none focus:outline-4 focus:outline-base-500/10 sm:text-sm bg-base-50 dark:bg-base-800"
              />
            </div>
          </div>
          <div class="sm:col-span-2">
            <label for="message" class="sr-only">Message</label>
            <div>
              <textarea
                name="message"
                id="message"
                placeholder="Your message goes here..."
                rows="4"
                class="w-full flex-auto appearance-none resize rounded-lg text-center outline outline-base-200 dark:outline-base-800 dark:text-white text-base-900 outline-inset border-transparent px-3 py-2 shadow-base-800/5 dark:placeholder:text-base-400 dark:place-holder-text-base-600 duration-300 focus:border-base-500 focus:outline-none focus:outline-4 focus:outline-base-500/10 sm:text-sm bg-base-50 dark:bg-base-800"
              ></textarea>
            </div>
          </div>
        </div>
        <div class="mt-2">
          <Button type="submit" size="base" variant="default" class="w-full"
            >Submit
          </Button>
        </div>
      </form>
    </Wrapper>
  </section>
</BaseLayout>
